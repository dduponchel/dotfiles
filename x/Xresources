!!
! generic term emulator classes
! font patched for powerline,
! see https://github.com/Lokaltog/vim-powerline/wiki/Patched-fonts
!!
*faceName:                  xft:Inconsolata:pixelsize=15
*font:                      xft:Inconsolata:pixelsize=15
! the patched font seems to crash some GUI (first try : gitk).
urxvt*font:                 xft:Inconsolata for Powerline:pixelsize=15

! *background is too generic and affect QT interfaces as well
urxvt*background:                #000000
xterm*background:                #000000
urxvt*foreground:                #aaaaaa
xterm*foreground:                #aaaaaa

! found on https://github.com/sykora/etc/blob/master/x/xdefaults
urxvt.color0: #000000
urxvt.color1: #D32A2F
urxvt.color2: #27DE3A
urxvt.color3: #CE5C00
urxvt.color4: #0066FF
urxvt.color5: #AC00FF
urxvt.color6: #208F93
urxvt.color7: #CCCCCC
urxvt.color8: #555753
urxvt.color9: #FF2963
urxvt.color10: #A4FF00
urxvt.color11: #FFC123
urxvt.color12: #46A4FF
urxvt.color13: #FF00BB
urxvt.color14: #23D9E0
urxvt.color15: #FFFFFF

urxvt.pastableTabs:false
! TODO change cutchars instead


*visualBell:                off
*.urgentOnBell:             true
*saveLines:                 16000

! dzen2 uses the font declared here
! Override *font to avoid problems
dzen2*font:                 fixed
! display: unable to load font xft:Inconsolata:pixelsize=18 : Resource temporarily unavailable
display*font:               fixed

!!
! xterm specific
!!
XTerm*colorMode:            on
XTerm*highlightSelection:   true
XTerm*trimSelection:        true

!!
! urxvt specific
!!
URxvt*print-pipe:           cat > $(TMPDIR=$HOME mktemp urxvt.XXXXXX)

URxvt*fading:               50
URxvt*pointerBlank:         true
URxvt*perl-ext-common:      default,matcher


URxvt*urlLauncher:          firefox
! in urxvt 9.16, this was renamed url-launcher.
URxvt*url-launcher:         firefox

! behavior of the scroll bar :
! do not scroll on output, but scroll on keypress.
! not global, because the scrollbar in xterm is useless
URxvt*scrollBar:            true
URxvt*scrollColor:          #444444
URxvt*scrollTtyOutput:      false
URxvt*scrollWithBuffer:     true
URxvt*scrollTtyKeypress:    true

! behave like xterm : do not break vim for alt-Key
URxvt.keysym.M-Down:            \033[1;3B
URxvt.keysym.M-Up:              \033[1;3A
URxvt.keysym.M-Left:            \033[1;3D
URxvt.keysym.M-Right:           \033[1;3C
URxvt.keysym.Control-Up:        \033[1;5A
URxvt.keysym.Control-Down:      \033[1;5B
URxvt.keysym.Control-Left:      \033[1;5D
URxvt.keysym.Control-Right:     \033[1;5C
URxvt.keysym.Control-Page_Up:   \033[5;5~
URxvt.keysym.Control-Page_Down: \033[6;5~
